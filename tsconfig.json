{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "lib": [
      "es2018", 
      "dom"
    ],
    "outDir": "dist",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "angularCompilerOptions": {
    "genDir": "aot"
  }
}
